#!/bin/dash

FLAG_FILE=/tmp/untangle-classd.flag
PID_FILE=/var/run/untangle-classd.pid

# on upgrade if we detect the pidfile then create the
# flag file so postinst knows to restart the daemon

if [ "$1" = "upgrade" ]; then
    if [ -f ${PID_FILE} ]; then
        date > ${FLAG_FILE}
    fi
fi

# always stop the daemon just in case
/etc/init.d/untangle-classd stop

exit 0
