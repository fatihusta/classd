#!/bin/dash

FAILD_BIND_PORT=3003

if [ $# != 1  ]; then
    echo "USAGE: $0 <config file name>"
    exit
fi

if [ -f /etc/default/untangle-faild ]; then
    . /etc/default/untangle-faild
fi

set_config() {
    curl -s -F 'json_request=@-' -m 10 "http://localhost:${FAILD_BIND_PORT}" <<EOF || echo "Unable to connect to host"
{ "function" : "set_config",
"config" : 
`cat $1`
 }
EOF
}

set_config $1 | sed -e 's|,|,\n|g' -e 's|}$|}\n|'

true
