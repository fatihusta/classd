#!/usr/bin/make -f

DESTDIR=$(CURDIR)/debian/untangle-support-keyring

build:
	dh_testdir
	dh_installdirs -A -v
	rm -f  $(DESTDIR)/usr/share/untangle-support-keyring/authorized_keys2
	for key in keys/* ; do \
          wc -l $(DESTDIR)/usr/share/untangle-support-keyring/authorized_keys2 ; \
          perl -pe 's/(\n)*$$/\n/' $$key >> $(DESTDIR)/usr/share/untangle-support-keyring/authorized_keys2 ; \
        done
	chmod 644 $(DESTDIR)/usr/share/untangle-support-keyring/authorized_keys2
	find $(DESTDIR) -name "\.svn" | xargs rm -rf 

clean:
	dh_testdir
	dh_testroot
	rm -rf $(DESTDIR) sav-install build-stamp
	dh_clean

binary-indep: build
	dh_testdir  
	dh_testroot   
#	dh_movefiles 
#	dh_installdebconf   
	dh_shlibdeps  
	dh_installdocs   
#	dh_installexamples   
#	dh_installmenu   
#	dh_installlogrotate   
#	dh_installemacsen   
#	dh_installpam   
#	dh_installmime   
#	dh_installinit
#	dh_installcron   
#	dh_installman   
#	dh_installinfo   
#	dh_undocumented   
	dh_installchangelogs    
#	dh_strip  
	dh_link   
	dh_compress   
#	dh_fixperms   
	dh_installdeb  
#	dh_perl     
	if [ -f debian/version ] ; then dh_gencontrol -- -v"`cat debian/version`" ; else dh_gencontrol ; fi
	dh_md5sums     

binary-arch:
# nothing to do

binary: binary-indep binary-arch
	dh_builddeb 

.PHONY: build clean binary-indep binary binary-indep binary-arch install configure
