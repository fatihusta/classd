#!/usr/bin/make -f

DESTDIR=$(CURDIR)/debian/untangle-google-connector

build:
	dh_testdir
	dh_installdirs -A -v
	tar --exclude=.svn -cf - -C files `find files/ -name '.svn' -prune -o -mindepth 1 -maxdepth 1 -printf "%P " 2>/dev/null`  | tar -xf - -C $(DESTDIR)
	find $(DESTDIR) -name "\.svn" | xargs rm -rf 

clean:
	dh_testdir
	dh_testroot
	rm -rf $(DESTDIR) sav-install build-stamp
	dh_clean

binary-indep: build
	dh_testdir  
	dh_testroot   
#	dh_movefiles 
#	dh_installdebconf   
	dh_shlibdeps  
	dh_installdocs -n   
#	dh_installexamples   
#	dh_installmenu   
#	dh_installlogrotate   
#	dh_installemacsen   
#	dh_installpam   
#	dh_installmime   
#	dh_installinit
#	dh_installcron   
#	dh_installman   
#	dh_installinfo   
#	dh_undocumented   
	dh_installchangelogs    
#	dh_strip  
	dh_link   
	dh_compress   
#	dh_fixperms   
	dh_installdeb  
#	dh_perl     
	if [ -f debian/version ] ; then dh_gencontrol -- -v"`cat debian/version`" ; else dh_gencontrol ; fi
	dh_md5sums     

binary-arch:
# nothing to do

binary: binary-indep binary-arch
	dh_builddeb 

.PHONY: build clean binary-indep binary binary-indep binary-arch install configure
