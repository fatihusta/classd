#!/usr/bin/make -f
# Sample debian/rules that uses debhelper. 
# GNU copyright 1997 by Joey Hess.
#
# This version is for a hypothetical package that builds an
# architecture-dependant package, as well as an architecture-independent
# package.

# Uncomment this to turn on verbose mode. 
# export DH_VERBOSE=1

# This is the debhelper compatibility version to use.

MKDIR=/bin/mkdir -p

DESTDIR=debian/untangle-ldap-server

ifneq (,$(findstring debug,$(DEB_BUILD_OPTIONS)))
	CFLAGS += -g
endif
ifeq (,$(findstring nostrip,$(DEB_BUILD_OPTIONS)))
	INSTALL_PROGRAM += -s
endif

configure: configure-stamp
configure-stamp:
	dh_testdir
	touch configure-stamp

build: configure
	dh_testdir
	rm -rf $(DESTDIR)
	mkdir -p $(DESTDIR)
	dh_installdirs -A -v
	for i in `cat debian/untangle-nsis-addons.dirs` ; do mkdir -p $(DESTDIR)/$$i ; done
	cp -r ./files/* $(DESTDIR)/
	find $(DESTDIR) -name ".svn" -print0 | xargs -0 rm -rf 

clean:
	dh_testdir
	dh_testroot
	rm -f build-arch-stamp build-indep-stamp configure-stamp
	rm -rf debian/$(DESTDIR) sav-install
	dh_clean

binary-arch: build
	dh_testdir  
	dh_testroot   
#	dh_movefiles  
#	dh_installdebconf   
#	dh_shlibdeps   # FIXME - had to remove
	dh_installdocs   
#	dh_installexamples   
#	dh_installmenu   
#	dh_installlogrotate   
#	dh_installemacsen   
#	dh_installpam   
#	dh_installmime   
#	dh_installinit
#	dh_installcron   
#	dh_installman   
#	dh_installinfo   
#	dh_undocumented   
	dh_installchangelogs    
#	dh_strip  
#	dh_link   
	dh_compress   
#	dh_fixperms   
	dh_installdeb  
#	dh_perl     
	if [ -f debian/version ] ; then dh_gencontrol -- -v"`cat debian/version`" ; else dh_gencontrol ; fi
	dh_md5sums     

binary-indep: build 
# nothing to do

binary: binary-indep binary-arch
	dh_builddeb 

.PHONY: build clean binary-indep binary install configure
