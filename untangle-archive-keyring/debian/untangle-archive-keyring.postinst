#! /bin/bash

APT_KEY=/usr/bin/apt-key
KEYRINGS_DIR=/usr/share/keyrings
VALID_KEYS_FILE=${KEYRINGS_DIR}/untangle-archive-keyring.gpg
REMOVED_KEYS_FILE=${KEYRINGS_DIR}/untangle-archive-removed-keys.gpg
if [ -x $APT_KEY ]; then
    $APT_KEY add ${VALID_KEYS_FILE}
    [ -f ${REMOVED_KEYS_FILE} ] && gpg --with-colons ${REMOVED_KEYS_FILE} | awk '{print $2}' | xargs $APT_KEY del
fi

exit 0
