#!/usr/bin/make -f

DESTDIR := debian/tmp
ARCH := $(shell uname -m)

ifeq ($(ARCH),x86_64)
  LIBDIR := src/vineyard/lib64/
  PLUGDIR := src/vineyard/plugins64/
else ifeq ($(ARCH),armv7l)
  LIBDIR := src/vineyard/libarm/
  PLUGDIR := src/vineyard/pluginsarm/
else
  LIBDIR := src/vineyard/lib/
  PLUGDIR := src/vineyard/plugins/
endif

configure: configure-stamp
configure-stamp:
	dh_testdir
	touch configure-stamp

build: configure
	dh_testdir
	$(MAKE)
	touch $@

## This should be done in make install, but, this should also use a ./configure script
## rather than a custom makefile.
install: build
	mkdir -p $(DESTDIR)
	tar --exclude=.svn -cf - -C files `find files/ -name '.svn' -prune -o -mindepth 1 -maxdepth 1 -printf "%P " 2>/dev/null`  | tar -xf - -C $(DESTDIR)
	mkdir -p $(DESTDIR)/usr/bin
	cp -a classd $(DESTDIR)/usr/bin
	find $(DESTDIR) -name "\.svn" | xargs rm -rf
	rsync -aH $(LIBDIR)/ $(DESTDIR)/usr/lib/
	mkdir -p $(DESTDIR)/usr/share/untangle-classd/plugins
	find $(PLUGDIR) -name '*.plg' | xargs cp -t $(DESTDIR)/usr/share/untangle-classd/plugins

clean:
	dh_testdir
	dh_testroot
	rm -rf configure-stamp $(DESTDIR)
	rm -f build
	$(MAKE) clean
	dh_clean

binary-indep:
# nothing to do

binary-arch: install
	dh_testdir
	dh_testroot
	dh_movefiles
#	dh_installdebconf
#	dh_shlibdeps
	dh_installdocs -n
	dh_installdirs
#	dh_installexamples
#	dh_installmenu
	dh_installlogrotate
#	dh_installemacsen
#	dh_installpam
#	dh_installmime
	dh_installinit
#	dh_installcron
#	dh_installman
#	dh_installinfo
#	dh_undocumented
	dh_installchangelogs
#	dh_strip
	dh_link
	dh_compress
	dh_fixperms
	dh_installdeb
#	dh_perl
	if [ -f debian/version ] ; then dh_gencontrol -- -v"`cat debian/version`" ; else dh_gencontrol ; fi
	dh_md5sums
	dh_builddeb -a

binary: binary-indep binary-arch

.PHONY: clean binary-indep binary build configure

