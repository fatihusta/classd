#!/usr/bin/make -f
# Sample debian/rules that uses debhelper.
# GNU copyright 1997 by Joey Hess.
#
# This version is for a hypothetical package that builds an
# architecture-dependant package, as well as an architecture-independent
# package.

# Uncomment this to turn on verbose mode.
# export DH_VERBOSE=1

# This is the debhelper compatibility version to use.

MKDIR=/bin/mkdir -p
ARCH := $(shell uname -m)

ifeq ($(ARCH),x86_64)
   BDAMDDIR := ./64/clientserver-1.15
else
   BDAMDDIR := ./32/clientserver-1.15
endif

include /usr/share/dpatch/dpatch.make

ifneq (,$(findstring debug,$(DEB_BUILD_OPTIONS)))
	CFLAGS += -g
endif
ifeq (,$(findstring nostrip,$(DEB_BUILD_OPTIONS)))
	INSTALL_PROGRAM += -s
endif

build: build-stamp
build-stamp: patch patch-stamp
	dh_testdir
	rm -rf ./debian/tmp
	mkdir -p ./debian/tmp
	dh_installdirs -A -v
	install -d ./debian/tmp/usr/lib/bdamserver
	install -d ./debian/tmp/usr/bin
	cp $(BDAMDDIR)/bin/bdamserver ./debian/tmp/usr/lib/bdamserver
	cp $(BDAMDDIR)/bin/bdamclient ./debian/tmp/usr/bin
	cp $(BDAMDDIR)/bin/*.so ./debian/tmp/usr/lib/bdamserver
	install -d ./debian/tmp/etc/bdamserver
	cp $(BDAMDDIR)/etc/*.conf ./debian/tmp/etc/bdamserver
	install -d ./debian/tmp/usr/share/perl5/Mail/SpamAssassin/Plugin
	cp ./plugin/SpamBlocker.pm ./debian/tmp/usr/share/perl5/Mail/SpamAssassin/Plugin
	install -d ./debian/tmp/etc/spamassassin
	cp ./plugin/spamblocker.pre ./debian/tmp/etc/spamassassin
	cp ./plugin/spamblocker.cf ./debian/tmp/etc/spamassassin
	install -d ./debian/tmp/tmp
	/usr/bin/find ./debian/tmp/ -name '.svn' | xargs rm -rf
	touch build-stamp

clean: unpatch
	dh_testdir
	dh_testroot
	rm -f build-stamp
	rm -rf debian/tmp debian/untangle-bdamserver
	dh_clean

binary-arch: build
	dh_testdir
	dh_testroot
	dh_movefiles
#	dh_installdebconf
#	dh_shlibdeps
	dh_installdocs -n
#	dh_installexamples
#	dh_installmenu
	dh_installlogrotate
#	dh_installemacsen
#	dh_installpam
#	dh_installmime
	dh_installinit
#	dh_installcron
#	dh_installman
#	dh_installinfo
#	dh_undocumented
	dh_installchangelogs
#	dh_strip
#	dh_link
	dh_compress
#	dh_fixperms
	dh_installdeb
#	dh_perl
	/usr/bin/find ./debian/tmp/ -name '.svn' | xargs rm -rf
	if [ -f debian/version ] ; then dh_gencontrol -- -v"`cat debian/version`" ; else dh_gencontrol ; fi
	dh_md5sums
	dh_builddeb -a

binary-indep: build
# nothing to do

binary: binary-indep binary-arch

.PHONY: build clean binary-indep binary install configure
