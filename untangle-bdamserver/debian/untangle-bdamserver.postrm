#!/bin/bash

#DEBHELPER#

if [ "$1" = "remove" ]; then
    # remove the signature cache directory
    rm -r -f /var/cache/untangle-bdamserver >/dev/null 2>&1

    # remove the log file
    rm -f /var/log/bdamserver.log

    # remove the pid file directory
    rm -r -f /var/run/bdamserver
    
    # remove the user created during postinst
    userdel bdamserver
fi

exit 0
