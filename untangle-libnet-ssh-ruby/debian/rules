#!/usr/bin/make -f
# -*- makefile -*-
# Sample debian/rules that uses debhelper.
# This file was originally written by Joey Hess and Craig Small.
# As a special exception, when this file is copied by dh-make into a
# dh-make output file, you may use that output file without restriction.
# This special exception was added by Craig Small in version 0.37 of dh-make.

# Uncomment this to turn on verbose mode.
#export DH_VERBOSE=1

CFLAGS = -Wall -g

ifneq (,$(findstring noopt,$(DEB_BUILD_OPTIONS)))
	CFLAGS += -O0
else
	CFLAGS += -O2
endif

configure: configure-stamp
configure-stamp:
	dh_testdir
	# Add here commands to configure the package.
	ruby1.8 setup.rb config --prefix=/usr --site-ruby='$$prefix/lib/ruby/1.8'

	touch configure-stamp


build: build-stamp

build-stamp: configure-stamp 
	dh_testdir

	# Add here commands to compile the package.
	ruby1.8 setup.rb setup
	#docbook-to-man debian/untangle-libnet-ssh-ruby.sgml > untangle-libnet-ssh-ruby.1

	touch build-stamp

clean:
	dh_testdir
	dh_testroot
	rm -f build-stamp configure-stamp

	# Add here commands to clean up after the build process.
	#-$(MAKE) clean
	-ruby1.8 setup.rb clean

	dh_clean 

install: build
	dh_testdir
	dh_testroot
	dh_clean -k 
#	dh_installdirs

	# Add here commands to install the package into debian/untangle-libnet-ssh-ruby.
	#$(MAKE) install DESTDIR=$(CURDIR)/debian/untangle-libnet-ssh-ruby
	ruby1.8 setup.rb install --prefix=$(CURDIR)/debian/untangle-libnet-ssh-ruby1.8

	mkdir -p $(CURDIR)/debian/untangle-libnet-ssh-ruby1.8/usr/share/doc/untangle-libnet-ssh-ruby1.8
	cp -a doc \
	  $(CURDIR)/debian/untangle-libnet-ssh-ruby1.8/usr/share/doc/untangle-libnet-ssh-ruby1.8
	rm \
	  $(CURDIR)/debian/untangle-libnet-ssh-ruby1.8/usr/share/doc/untangle-libnet-ssh-ruby1.8/doc/LICENSE-*

# Build architecture-independent files here.
binary-arch:
# We have nothing to do by default.

# Build architecture-dependent files here.
binary-indep: install
	dh_testdir
	dh_testroot
	dh_installchangelogs ChangeLog
	dh_installdocs
	dh_installexamples
	find $(CURDIR)/debian/untangle-libnet-ssh-ruby1.8 -name .svn -o -name "._*" | xargs rm -fr
	rm -fr $(CURDIR)/debian/untangle-libnet-ssh-ruby1.8/usr/share/doc/untangle-libnet-ssh-ruby1.8/api/files/doc/images/
#	dh_install
#	dh_installmenu
#	dh_installdebconf	
#	dh_installlogrotate
#	dh_installemacsen
#	dh_installpam
#	dh_installmime
#	dh_installinit
#	dh_installcron
#	dh_installinfo
	dh_installman
	dh_link
	dh_strip
	dh_compress
	dh_fixperms
#	dh_perl
#	dh_python
#	dh_makeshlibs
	dh_installdeb
	dh_shlibdeps
	dh_gencontrol
	dh_md5sums
	dh_builddeb

binary: binary-indep binary-arch
.PHONY: build clean binary-indep binary-arch binary install configure
