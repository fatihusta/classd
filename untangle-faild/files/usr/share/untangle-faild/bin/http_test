#!/bin/dash

URL=$1

NUM_TRIES=3
TIMEOUT=$(( ${FAILD_TIMEOUT_MS} / ( ${NUM_TRIES} * 1000 )  ))
if [ "${TIMEOUT}" = "0" ]; then 
    TIMEOUT=1
fi

wget --bind-address=${FAILD_PRIMARY_ADDRESS}  --header="FailD-Flag: true" -T ${TIMEOUT} --tries=${NUM_TRIES} -O /dev/null ${URL} 2>&1 | grep -q '^Connecting to.*connected.*$'

